generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Contact {
    id        String   @id @default(cuid())
    firstName String   @map("first_name")
    lastName  String   @map("last_name")
    email     String
    phone     String?
    subject   String?
    message   String   @db.Text
    read      Boolean  @default(false)
    archived  Boolean  @default(false)
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    @@index([read])
    @@index([createdAt])
    @@map("contacts")
}

model Project {
    id          String   @id @default(cuid())
    title       String
    slug        String   @unique
    description String   @db.Text
    shortDesc   String?  @map("short_desc")
    tags        String[]
    category    String
    imageUrl    String?  @map("image_url")
    githubUrl   String?  @map("github_url")
    liveUrl     String?  @map("live_url")
    featured    Boolean  @default(false)
    order       Int      @default(0)
    published   Boolean  @default(true)
    createdAt   DateTime @default(now()) @map("created_at")
    updatedAt   DateTime @updatedAt @map("updated_at")

    @@index([category, published])
    @@index([featured])
    @@map("projects")
}

model Skill {
    id        String   @id @default(cuid())
    title     String
    category  String
    icon      String?
    order     Int      @default(0)
    published Boolean  @default(true)
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    @@map("skills")
}

model ProjectCategory {
    id    String @id @default(cuid())
    key   String @unique
    label String
    order Int    @default(0)

    @@map("project_categories")
}

model SkillCategory {
    id    String @id @default(cuid())
    key   String @unique
    label String
    order Int    @default(0)

    @@map("skill_categories")
}

model AboutSection {
    id        String   @id @default(cuid())
    key       String   @unique
    title     String
    content   String   @db.Text
    order     Int      @default(0)
    published Boolean  @default(true)
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    @@map("about_sections")
}

// NOUVELLES TABLES

model Experience {
    id          String   @id @default(cuid())
    title       String
    company     String
    location    String?
    type        String   @default("stage")
    startDate   DateTime @map("start_date")
    endDate     DateTime? @map("end_date")
    description String   @db.Text
    skills      String[]
    order       Int      @default(0)
    published   Boolean  @default(true)
    createdAt   DateTime @default(now()) @map("created_at")
    updatedAt   DateTime @updatedAt @map("updated_at")

    @@map("experiences")
}

model Education {
    id          String   @id @default(cuid())
    title       String
    school      String
    location    String?
    startDate   DateTime @map("start_date")
    endDate     DateTime? @map("end_date")
    description String?  @db.Text
    order       Int      @default(0)
    published   Boolean  @default(true)
    createdAt   DateTime @default(now()) @map("created_at")
    updatedAt   DateTime @updatedAt @map("updated_at")

    @@map("educations")
}

model SocialLink {
    id        String  @id @default(cuid())
    platform  String  @unique
    url       String
    icon      String?
    order     Int     @default(0)
    published Boolean @default(true)

    @@map("social_links")
}

model SiteConfig {
    id              String  @id @default(cuid())
    key             String  @unique
    value           String  @db.Text
    
    @@map("site_config")
}
